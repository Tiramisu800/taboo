<head>
    <meta charset="utf-8">
    <title>Sign up</title>
    <link rel="icon" href="img/l1.png">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>

<%-include('header')-%>

<form action="/reg" method="POST">
    <div class="auth"><h1>SIGN UP</h1>
        <% if (messages.error) { %>
            <%= messages.error %>
        <% } %>
        <div>
            <label for="name" style="font-size: 20px">Username</label>
            <input type="name"  name="name" required>
        </div>
    <div>
        <label for="email" style="font-size: 20px">Email</label>
        <input type="email"  name="email" required>
    </div>
    <div>
        <label for="password" style="font-size: 20px">Password</label>
        <input type="password" name="password" required>
    </div><br>
    <button type="submit" class="authbtn">Register</button><br><br>
    <a href="/log" style="color: #ff93dd; font-size: 20px">Login</a>
    </div>
</form>





